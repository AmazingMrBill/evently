<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#737CB1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User_profile">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80A2B7FF"
                    android:orientation="horizontal">

                    <!-- User's Profile Image -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/userProfileImage"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user" />
                    </androidx.cardview.widget.CardView>

                    <!-- User's Details -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingEnd="10dp">

                        <!-- User's Name -->
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="70dp"
                            android:text="John Doe"
                            android:textColor="@color/deepBlue"
                            android:textSize="18sp" />

                        <!-- User's Email Address -->
                        <TextView
                            android:id="@+id/emailAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="johndoe@email.com"
                            android:textColor="#4FA0C5"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80A2B7FF"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!-- Account Settings Option -->
                    <TextView
                        android:id="@+id/user_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:text="User Settings"
                        android:textColor="@color/deepBlue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/changeCityButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="#5B6A9C"
                        android:text="Change Primary City"
                        app:cornerRadius="15dp" />

                    <!-- Manage Event Option -->
                    <Button
                        android:id="@+id/profile_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="#5B6A9C"
                        android:text="Change profile picture"
                        app:cornerRadius="15dp" />

                    <!-- Change Primary City Option -->
                    <Button
                        android:id="@+id/switch_accounts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="#5B6A9C"
                        android:text="Switch Accounts"
                        app:cornerRadius="15dp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80A2B7FF"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/app_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:text="App Settings"
                        android:textColor="@color/deepBlue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Account Settings Option -->
                    <Button
                        android:id="@+id/accountSettingsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="#5B6A9C"
                        android:text="Change Primary City"
                        app:cornerRadius="15dp" />

                    <!-- Manage Event Option -->
                    <Button
                        android:id="@+id/manageEventButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="#5B6A9C"
                        android:text="Manage/Create Event"
                        app:cornerRadius="15dp" />

                    <!-- Change Primary City Option -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <Switch
                            android:id="@+id/appearance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#5B6A9C"
                            android:paddingStart="70dp"
                            android:text="CHANGE THEME"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/lightBlue"
                            tools:ignore="TouchTargetSizeCheck" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80A2B7FF"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rewards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:text="Rewards"
                        android:textColor="@color/deepBlue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- Account Settings Option -->
                        <TextView
                            android:id="@+id/tokens"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:text="Token Count:"
                            android:textSize="18sp"
                            app:cornerRadius="15dp" />

                        <!-- Account Settings Option -->
                        <TextView
                            android:id="@+id/token_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textColor="@color/textBlue"
                            android:textSize="18sp"
                            app:cornerRadius="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- Account Settings Option -->
                        <TextView
                            android:id="@+id/NFT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:text="NFTs Collected:"
                            android:textSize="18sp"
                            app:cornerRadius="15dp" />

                        <!-- Account Settings Option -->
                        <TextView
                            android:id="@+id/NFT_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textColor="@color/textBlue"
                            android:textSize="18sp"
                            app:cornerRadius="15dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/signOutButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#5B6A9C"
                android:text="Sign Out"
                android:layout_marginEnd="80dp"
                app:cornerRadius="15dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>