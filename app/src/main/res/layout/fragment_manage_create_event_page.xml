<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/smokyWhite"
    android:padding="16dp"
    tools:context=".EventManager.manage_create_event_page">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#80A2B7FF"
            android:orientation="horizontal">

            <!-- User's Profile Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/userProfileImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/user" />
            </androidx.cardview.widget.CardView>

            <!-- User's Details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingEnd="10dp">

                <!-- User's Name -->
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="John Doe"
                    android:textColor="@color/deepBlue"
                    android:textSize="18sp" />

                <!-- User's Email Address -->
                <TextView
                    android:id="@+id/emailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="johndoe@email.com"
                    android:textColor="#4FA0C5"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Event Images -->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80A2B7FF"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_width="370dp"
                android:layout_height="150dp">

                <androidx.cardview.widget.CardView
                    android:padding="10dp"
                    app:cardCornerRadius="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/eventImageView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType= "centerCrop"
                        android:src="@drawable/analytics"
                        android:contentDescription="event_image"
                        android:layout_marginBottom="16dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <Button
                android:id="@+id/btnEventAnalytics"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#5B6A9C"
                android:text="Event Analytics"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="180dp"
            app:cardCornerRadius="30dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:background="#80A2B7FF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/eventImageView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType= "fitCenter"
                    android:src="@drawable/create_event"
                    android:contentDescription="event_image"/>

                <Button
                    android:id="@+id/btnCreateEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#5B6A9C"
                    android:text="Create event"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:cornerRadius="15dp" />

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_width="180dp"
            app:cardCornerRadius="30dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:background="#80A2B7FF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/eventImageView3"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType= "fitCenter"
                    android:src="@drawable/manage_event"
                    android:contentDescription="event_image"/>

                <Button
                    android:id="@+id/btnManageEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#5B6A9C"
                    android:text="Manage events"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:cornerRadius="15dp" />

            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </GridLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="370dp"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="16dp"
            android:background="#80A2B7FF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:textSize="17sp"
                android:textStyle="bold">
            </TextView>

            <!-- Event Date -->
            <TextView
                android:id="@+id/editTextEventDate"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.5M"
                android:drawablePadding="15dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/analyticsicn" />

            <TextView
                android:id="@+id/likes"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="750K"
                android:drawablePadding="15dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/love" />

            <TextView
                android:id="@+id/shares"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="400K"
                android:drawablePadding="15dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/shareicn" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout >